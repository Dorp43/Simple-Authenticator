<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="user">Username</label>
              <input type="text" class="form-control" name="username" required autofocus>
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" minlength="6" maxlength="20" required>
              <label for="confirmPass">Confirm Password</label>
              <input type="password" class="form-control" name="confirmPass" minlength="6" maxlength="20" required>
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
            <p>Have an account? <a href="/login">Login</a></p>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
          <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
            <i class="fab fa-facebook"></i>
            Sign Up with Facebook
            </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/header') %>
